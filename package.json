{
  "name": "clipster",
  "displayName": "Clipster",
  "version": "1.2.106",
  "description": "A VS Code extension to copy paths, folder structures, and contents with customization.",
  "icon": "resources/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jnerytech/clipster.git"
  },
  "forkedFrom": {
    "author": "Jesper Wilfing (TheJesper)",
    "repository": "https://github.com/TheJesper/clipster"
  },
  "publisher": "conzeon",
  "scripts": {
    "test": "jest --coverage",
    "test:quick": "jest --onlyChanged",
    "test:failed": "jest --onlyFailures",
    "webpack": "webpack --config webpack.config.cjs --mode development",
    "build": "npm run type-check && webpack --config webpack.config.cjs --mode production --devtool hidden-source-map",
    "clean": "rimraf ./out",
    "bump-build": "standard-version --no-verify && npm run build",
    "clean-build-install": "npm run clean && npm run bump-build && npm run install-extension",
    "install-extension": "node build.js",
    "release": "standard-version",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.17.0",
    "@types/vscode": "^1.93.0",
    "@vscode/vsce": "^2.15.0",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "dependencies": {
    "ignore": "^6.0.2",
    "picomatch": "^4.0.2"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Clipster Settings",
      "properties": {
        "clipster.showCreateFileFromClipboard": {
          "type": "boolean",
          "default": true,
          "description": "Enable Create File or Folder from Clipboard Content."
        },
        "clipster.showCopyFolderStructure": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Folder Structure."
        },
        "clipster.showCopyFolderStructureAndContent": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Folder Structure and Content."
        },
        "clipster.showCopyRootFolderPath": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Root Folder Path."
        },
        "clipster.showCopyRootFolderStructure": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Root Folder Structure."
        },
        "clipster.showCopyFileContentWithHeader": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy File Content with Path."
        },
        "clipster.showCopyRootFolderStructureAndContent": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Root Folder Structure and Content."
        },
        "clipster.showCopyFile": {
          "type": "boolean",
          "default": true,
          "description": "Enable copying individual files."
        },
        "clipster.showPasteFile": {
          "type": "boolean",
          "default": true,
          "description": "Enable pasting copied files into directories."
        },
        "clipster.showCopyFileContents": {
          "type": "boolean",
          "default": true,
          "description": "Enable copying file contents only."
        },
        "clipster.showCopyFileContentWithLineNumbers": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy File Content with Line Numbers."
        },
        "clipster.showCopySelectionWithContext": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Selection with File Path and Line Range."
        },
        "clipster.showCopyFileContentWithDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy File Content with VS Code Diagnostics."
        },
        "clipster.showCopyMultipleFilesContent": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Multiple Selected Files (concatenated)."
        },
        "clipster.showInClipsterSubmenu": {
          "type": "boolean",
          "default": true,
          "description": "Show Clipster commands in submenu."
        },
        "clipster.additionalIgnores": {
          "type": "array",
          "default": [],
          "description": "Additional file patterns to ignore when copying folder structures."
        },
        "clipster.maxRootFiles": {
          "type": "integer",
          "default": 10,
          "description": "Maximum number of files to copy from the root folder."
        },
        "clipster.maxRootSizeKB": {
          "type": "integer",
          "default": 500,
          "description": "Maximum size (in KB) of files to copy from the root folder."
        }
      }
    },
    "commands": [
      {
        "command": "clipster.createFileFromClipboard",
        "title": "Create File or Folder from Clipboard"
      },
      {
        "command": "clipster.copyFolderStructure",
        "title": "Copy Folder Structure"
      },
      {
        "command": "clipster.copyFolderStructureAndContent",
        "title": "Copy Folder Structure and Content"
      },
      {
        "command": "clipster.copyRootFolderPath",
        "title": "Copy Root Folder Path"
      },
      {
        "command": "clipster.copyRootFolderStructure",
        "title": "Copy Root Folder Structure"
      },
      {
        "command": "clipster.copyFileContentWithHeader",
        "title": "Copy File(s) Content with Path"
      },
      {
        "command": "clipster.copyRootFolderStructureAndContent",
        "title": "Copy Root Folder Structure and Content"
      },
      {
        "command": "clipster.copyFile",
        "title": "Copy File(s) and/or Folder(s)"
      },
      {
        "command": "clipster.pasteFile",
        "title": "Paste File(s) and/or Folder(s)"
      },
      {
        "command": "clipster.copyFileContentWithLineNumbers",
        "title": "Copy File Content with Line Numbers"
      },
      {
        "command": "clipster.copySelectionWithContext",
        "title": "Copy Selection with File Context"
      },
      {
        "command": "clipster.copyFileContentWithDiagnostics",
        "title": "Copy File Content with Diagnostics"
      },
      {
        "command": "clipster.copyMultipleFilesContent",
        "title": "Copy Multiple Files (Concatenated)"
      }
    ],
    "submenus": [
      {
        "id": "clipsterMenu",
        "label": "Clipster"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "clipsterMenu",
          "group": "_navigation"
        }
      ],
      "clipsterMenu": [
        {
          "command": "clipster.createFileFromClipboard",
          "group": "1_create"
        },
        {
          "command": "clipster.copyFolderStructure",
          "group": "2_copy"
        },
        {
          "command": "clipster.copyFolderStructureAndContent",
          "group": "2_copy"
        },
        {
          "command": "clipster.copyFileContentWithHeader",
          "group": "2_copy"
        },
        {
          "command": "clipster.copyRootFolderPath",
          "group": "3_copyRoot"
        },
        {
          "command": "clipster.copyRootFolderStructure",
          "group": "3_copyRoot"
        },
        {
          "command": "clipster.copyRootFolderStructureAndContent",
          "group": "3_copyRoot"
        },
        {
          "command": "clipster.copyFile",
          "group": "4_file",
          "when": "explorerResourceIsFolder || explorerResourceIsFile"
        },
        {
          "command": "clipster.pasteFile",
          "group": "4_file",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "clipster.copyFileContentWithLineNumbers",
          "group": "2_copy",
          "when": "explorerResourceIsFile"
        },
        {
          "command": "clipster.copyFileContentWithDiagnostics",
          "group": "2_copy",
          "when": "explorerResourceIsFile"
        },
        {
          "command": "clipster.copyMultipleFilesContent",
          "group": "2_copy",
          "when": "explorerResourceIsFile"
        }
      ],
      "editor/context": [
        {
          "command": "clipster.copySelectionWithContext",
          "group": "9_cutcopypaste",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "serialize-javascript": "^7.0.3"
  }
}
