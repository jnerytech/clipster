{
  "name": "clipster",
  "displayName": "Clipster",
  "version": "1.2.32",
  "description": "A VS Code extension to copy paths, folder structures, and contents with customization.",
  "icon": "resources/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheJesper/clipster.git"
  },
  "publisher": "conzeon",
  "scripts": {
    "test": "mocha --require @babel/register --require ./test/setup.js ./test/*.test.js",
    "webpack": "webpack --mode development",
    "build": "webpack --config webpack.config.cjs --mode production --devtool hidden-source-map",
    "clean": "rimraf ./out",
    "bump-build": "standard-version --no-verify && npm run build",
    "clean-build-install": "npm run clean && npm run bump-build && npm run install-extension",
    "install-extension": "node build.js",
    "release": "standard-version"
  },
  "devDependencies": {
    "@babel/core": "^7.25.7",
    "@babel/plugin-transform-modules-commonjs": "^7.25.7",
    "@babel/plugin-transform-strict-mode": "^7.25.9",
    "@babel/preset-env": "^7.25.7",
    "@babel/preset-react": "^7.25.7",
    "@babel/register": "^7.25.9",
    "@types/chai": "^4.3.8",
    "@types/mocha": "^10.0.6",
    "@types/vscode": "^1.93.0",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^2.15.0",
    "babel-loader": "^9.1.3",
    "chai": "^4.5.0",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.57.1",
    "eslint-plugin-mocha": "^10.2.0",
    "esm": "^3.2.25",
    "mocha": "^10.8.2",
    "mock-fs": "^5.3.0",
    "mock-require": "^3.0.3",
    "rimraf": "^3.0.2",
    "sinon": "^19.0.2",
    "standard-version": "^9.3.2",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "dependencies": {
    "ignore": "^6.0.2",
    "picomatch": "^4.0.2"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Clipster Settings",
      "properties": {
        "clipster.showCreateFileFromClipboard": {
          "type": "boolean",
          "default": true,
          "description": "Enable Create File or Folder from Clipboard Content."
        },
        "clipster.showCopyFolderStructure": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Folder Structure."
        },
        "clipster.showCopyFolderStructureAndContent": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Folder Structure and Content."
        },
        "clipster.showCopyRootFolderPath": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Root Folder Path."
        },
        "clipster.showCopyRootFolderStructure": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Root Folder Structure."
        },
        "clipster.showCopyFileContentWithHeader": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy File Content with Path."
        },
        "clipster.showCopyRootFolderStructureAndContent": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Root Folder Structure and Content."
        },
        "clipster.showCopyFile": {
          "type": "boolean",
          "default": true,
          "description": "Enable copying individual files."
        },
        "clipster.showPasteFile": {
          "type": "boolean",
          "default": true,
          "description": "Enable pasting copied files into directories."
        },
        "clipster.showCopyFileContents": {
          "type": "boolean",
          "default": true,
          "description": "Enable copying file contents only."
        },
        "clipster.showInClipsterSubmenu": {
          "type": "boolean",
          "default": true,
          "description": "Show Clipster commands in submenu."
        },
        "clipster.additionalIgnores": {
          "type": "array",
          "default": [],
          "description": "Additional file patterns to ignore when copying folder structures."
        },
        "clipster.maxRootFiles": {
          "type": "integer",
          "default": 10,
          "description": "Maximum number of files to copy from the root folder."
        },
        "clipster.maxRootSizeKB": {
          "type": "integer",
          "default": 500,
          "description": "Maximum size (in KB) of files to copy from the root folder."
        }
      }
    },
    "commands": [
      {
        "command": "clipster.createFileFromClipboard",
        "title": "üìã Create File or Folder from Clipboard"
      },
      {
        "command": "clipster.copyFolderStructure",
        "title": "üìÅ Copy Folder Structure"
      },
      {
        "command": "clipster.copyFolderStructureAndContent",
        "title": "üìÅ Copy Folder Structure and Content"
      },
      {
        "command": "clipster.copyRootFolderPath",
        "title": "üìÅ Copy Root Folder Path"
      },
      {
        "command": "clipster.copyRootFolderStructure",
        "title": "üìÅ Copy Root Folder Structure"
      },
      {
        "command": "clipster.copyFileContentWithHeader",
        "title": "üìù Copy File(s) Content with Path"
      },
      {
        "command": "clipster.copyRootFolderStructureAndContent",
        "title": "üìù Copy Root Folder Structure and Content"
      },
      {
        "command": "clipster.copyFile",
        "title": "üìÑ Copy File"
      },
      {
        "command": "clipster.pasteFile",
        "title": "üìÑ Paste File"
      },
      {
        "command": "clipster.copyFileContents",
        "title": "üìù Copy File Contents"
      }
    ],
    "submenus": [
      {
        "id": "clipsterMenu",
        "label": "Clipster üìÅ"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "clipsterMenu",
          "group": "_navigation"
        }
      ],
      "clipsterMenu": [
        {
          "command": "clipster.createFileFromClipboard",
          "group": "1_create"
        },
        {
          "command": "clipster.copyFolderStructure",
          "group": "2_copy"
        },
        {
          "command": "clipster.copyFolderStructureAndContent",
          "group": "2_copy"
        },
        {
          "command": "clipster.copyFileContentWithHeader",
          "group": "2_copy"
        },
        {
          "command": "clipster.copyRootFolderPath",
          "group": "3_copyRoot"
        },
        {
          "command": "clipster.copyRootFolderStructure",
          "group": "3_copyRoot"
        },
        {
          "command": "clipster.copyRootFolderStructureAndContent",
          "group": "3_copyRoot"
        },
        {
          "command": "clipster.pasteFile",
          "group": "4_file"
        },
        {
          "command": "clipster.copyFileContents",
          "group": "4_file"
        }
      ]
    }
  }
}
